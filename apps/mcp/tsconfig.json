{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true,
    "noEmit": true,
    "isolatedModules": true,
    "paths": {
      "@everyskill/db": ["../../packages/db/src"],
      "@everyskill/db/*": ["../../packages/db/src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
